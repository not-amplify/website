---
export interface Props {
  frontmatter: {
    title: string;
    pubDate: string;
  };
}

const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";
;
---

<Layout>
  <div
    class="fixed bg-rosepine-surface text-rosepine-text rounded-xl top-4 p-3 max-w-xl w-fit mx-auto flex gap-2 items-center justify-between"
  >
    <a
      class="text-rosepine-subtle hover:text-rosepine-iris"
      href="/blog"
    >
      <span data-lucide="arrow-left"></span>
    </a>
    <h1 class="text-2xl font-bold mb-2">{frontmatter.title}</h1>
  </div>

  <article
    class="max-w-3xl mx-auto bg-rosepine-surface p-6 rounded-xl shadow-md border border-rosepine-highlightLow"
  >
    <slot />
  </article>
</Layout>

<script>
  import { createIcons, icons } from "lucide";

  createIcons({ icons });

  document.addEventListener("astro:page-load", () => {
    createIcons({ icons });
  });
  document.addEventListener("astro:after-swap", () => {
    createIcons({ icons });
  });
</script>